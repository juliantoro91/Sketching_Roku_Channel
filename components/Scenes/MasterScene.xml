<?xml version="1.0" encoding="UTF-8"?>

<component name="MasterScene" extends="Group">
	<!-- Handlers -->
    <script type="text/brightscript" uri="pkg:/components/Scenes/MasterScene.brs" />
	<script type="text/brightscript" uri="pkg:/source/utils.brs" />
    
    <interface>
		<field id="width" type="Integer" />
		<field id="height" type="Integer" />
    	<field id="screenStack" type="array" />
        <field id="layerOne" type="node" />
        <field id="layerTwo" type="node" />
        <field id="startTransition" type="integer" />
    </interface>
    
    <children>
    
    	<Group
    		id="sceneLayers">
	    	<Rectangle
	    		id="sceneLayerOne"
				color="0xffffff00"
	    		visible="true" />
	    	<Rectangle
	    		id="sceneLayerTwo"
				color="0xffffff00"
	    		visible="true" />
	    </Group>

        <Rectangle
            id="transitionShader"
            color="0xFFFFFFFF"
            opacity="0"
            visible="true" />

        <Animation
	    	id="transitionAnimation"
	    	repeat="false"
	    	duration="4.8" >
	    	<FloatFieldInterpolator
	    		id="transitionAnimationInterpolator"
	    		key="[0.0, 0.5, 1.0]"
	    		keyValue="[0.0, 1.0, 0.0]"
	    		fieldToInterp="transitionShader.opacity"
	    	/>
	    </Animation>

    </children>
    
</component>
