<?xml version="1.0" encoding="UTF-8"?>
<component name="MasterItem" extends="Group" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

	<!-- Handler -->
	<script type="text/brightscript" uri="pkg:/components/MasterScreen/MasterItem.brs" />
	<script type="text/brightscript" uri="pkg:/source/utils.brs" />
	
	<interface>
		<field id="content" type="Node" />
		<field id="width" type="Integer" alias="masterFrame.width" />
		<field id="height" type="Integer" alias="masterFrame.height" />
        <field id="widthFactor" type="Float" />
        <field id="heightFactor" type="Float" />
		<field id="masterFrameDeviation" type="Intarray" />
        <field id="runSetup" type="Boolean" alwaysNotify="true" onChange="ScreenSetup" />
	</interface>
	
	<children>

		<Group
			id="backgroundFrame" />

		<Rectangle
			id="masterFrame"
			color="0xc4c4c400">
			<LayoutGroup
				id="masterFrameLG"
				layoutDirection="vert"
				horizAlignment="center" />
		</Rectangle>

	</children>
	
</component>
