<?xml version="1.0" encoding="UTF-8"?>
<component name="MasterScreen" extends="Group" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

	<!-- Handler -->
	<script type="text/brightscript" uri="pkg:/components/MasterScreen/MasterScreen.brs" />
	<script type="text/brightscript" uri="pkg:/source/utils.brs" />
	
	<interface>
		<field id="content" type="Node" />
		<field id="width" type="Integer" alias="masterFrame.width" />
		<field id="height" type="Integer" alias="masterFrame.height" />
        <field id="widthFactor" type="Float" />
        <field id="heightFactor" type="Float" />
		<field id="masterDeviation" type="Intarray" />
		<field id="fullSizedBackground" type="Boolean" />
		<field id="url" type="string" />
		<field id="loadCompleted" type="boolean" />
		<function name="SpecificScreenSetup" />
	</interface>
	
	<children>

		<Rectangle
			id="backgroundFrame"
			color="0xc4c4c400">
		</Rectangle>

		<Rectangle
			id="masterFrame"
			color="0xc4c4c400">
			<LayoutGroup
				id="masterFrameLG"
				layoutDirection="vert"
				horizAlignment="center" />
		</Rectangle>

		<!--LoadingIndicator-->

	</children>
	
</component>