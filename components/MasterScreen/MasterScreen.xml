<?xml version="1.0" encoding="UTF-8"?>
<component name="MasterScreen" extends="MasterItem" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

	<!-- Handler -->
	<script type="text/brightscript" uri="pkg:/components/MasterScreen/MasterScreen.brs" />
	
	<interface>
		<field id="url" type="string" />
		<field id="finalOpacity" type="Integer" />
		<field id="animationState" type="String" alwaysNotify="true" onChange="OnAnimationStateChange" />
	</interface>
	
	<children>
		
		<ParallelAnimation
			id="masterAnimation" >

			<Animation
				id="backgroundAnimation"
				duration="2"
				repeat="false" >
				<FloatFieldInterpolator
					id="backgroundAnimationInterpolator"
					key="[0, 1]"
					keyValue="[0.0, 1.0]"
					fieldToInterp="backgroundFrame.opacity" />
			</Animation>

			<Animation
				id="masterFrameAnimation"
				duration="2"
				repeat="false" >
				<FloatFieldInterpolator
					id="masterFrameAnimationInterpolator"
					key="[0, 1]"
					keyValue="[0.0, 1.0]"
					fieldToInterp="masterFrame.opacity" />
			</Animation>

		</ParallelAnimation>

		<!-- LoadingIndicator
			id="masterLoadingIndicator" /-->

	</children>
	
</component>
